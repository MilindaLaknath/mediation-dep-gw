<?xml version="1.0" encoding="UTF-8"?>
<sequence name="ussdInboundResponseSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <class name="com.wso2telco.dep.mediator.impl.ussd.USSDInboundResponseMediator"/>
    <property name="outboundUSSDMessage" expression="json-eval($.outboundUSSDMessageRequest.outboundUSSDMessage)" />
    <property expression="fn:translate(fn:translate(get-property('outboundUSSDMessage'), '\n', '\\n'), '\r', '\\r')" name="outboundUSSDMessageReplacement" scope="default" type="STRING" />

    <class name="com.wso2telco.dep.common.mediation.UtilMediator">
        <property name="propertyValue" value="singlePropertyReplacement"/>
        <property name="propertyName" value="outboundUSSDMessage"/>
        <property name="propertyPath" value="payload.outboundUSSDMessageRequest.outboundUSSDMessage"/>
        <property name="msgContextProperty" value="outboundUSSDMessageReplacement"/>
    </class>

    <class name="com.wso2telco.dep.common.mediation.UtilMediator">
        <property name="propertyValue" value="singlePropertyReplacement"/>
        <property name="propertyName" value="notifyURL"/>
        <property name="propertyPath" value="payload.outboundUSSDMessageRequest.responseRequest.notifyURL"/>
        <property name="msgContextProperty" value="subsEndPoint"/>
    </class>
</sequence>